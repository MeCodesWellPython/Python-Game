print("The next game is a hangman.")
import random

def choose_word():
    words = ['python', 'hangman', 'programming', 'challenge', 'giraffe', 'elephant']
    return random.choice(words)

def display_word(word, guessed_letters):
    return ' '.join([letter if letter in guessed_letters else '_' for letter in word])

def hangman():
    # Game introduction
    print("Welcome to Hangman!")
    
    # Choose a random word
    word = choose_word()
    guessed_letters = set()
    attempts = 6
    wrong_guesses = 0

    while wrong_guesses < attempts:
       
        print("\n" + display_word(word, guessed_letters))
        print(f"Wrong guesses left: {attempts - wrong_guesses}")
        
        
        guess = input("Guess a letter: ").lower()

        if len(guess) != 1 or not guess.isalpha():
            print("Invalid input. Please enter a single letter.")
            continue
        
        if guess in guessed_letters:
            print("You've already guessed that letter.")
            continue
        
        
        guessed_letters.add(guess)

        if guess in word:
            print("Good guess!")
          
            if all(letter in guessed_letters for letter in word):
                print(f"Congratulations! You've guessed the word: {word}")
                break
        else:
            wrong_guesses += 1
            print(f"Incorrect guess. The letter '{guess}' is not in the word.")
    else:
        
        print(f"Sorry, you've run out of attempts. The word was '{word}'.")


if __name__ == "__main__":
    hangman()
print("             ")
